
use crate::ast;

grammar;

Ident: String = {
    <s:r"[a-z][a-zA-Z0-9_']*"> => s.to_string(),
}

ConIdent: String = {
    <s:r"[A-Z][a-zA-Z0-9_']*"> => s.to_string(),
}

DataDecl: ast::DataDecl = {
    "data" <n:ConIdent> => ast::DataDecl {name: n}
}

pub Decl: ast::Decl = {
    <d:DataDecl> => ast::Decl::Data(d)
}
